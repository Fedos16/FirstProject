                            <div class="tooltip" id="tooltip_year">
                                <div class="tooltip_left">
                                    <ul>
                                        <% for(var i=0;i<data.year.length;i++) {%>

                                            <li><%= data.year[i] %></li>

                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="div_after_tooltip">
