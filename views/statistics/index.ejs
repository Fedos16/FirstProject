                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
                    
                <div class="title_stat">
                    <div class="left_title_stat">
                        <h2 id="first_hh_stat" title="Нажмите, чтобы показать/скрыть диаграмму">Количесто новых анкет</h2>
                    </div>
                    <div class="right_title_stat">
                        <div class="div_after_tooltip">
                            <button class="parametr_stat" id="title_year_stat_one">Год</button>
                            <div class="tooltip" id="tooltip_year_one">
                                <div class="tooltip_left">
                                    <ul>
                                        <% for(var i=0;i<data.year.length;i++) { %>

                                            <li><%= data.year[i] %></li>

                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="div_after_tooltip">
                            <button class="parametr_stat" id="title_month_stat_one">Месяц</button>
                            <div class="tooltip" id="tooltip_month_one"> 
                                <div class="tooltip_right" id="first_d_month">
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="first_diagramm" id="curve_chart_one" style="display: none;">ЗДЕСЬ БУДЕТ ДИАГРАММА</div>
